<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="@dimen/margin" >

    <ImageView
        android:id="@+id/imageViewArrow"
        android:layout_width="45dp"
        android:layout_height="100dp"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/show_your_wifi_configurations"
        android:paddingBottom="12dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_arrow" />

    <TextView
        android:id="@+id/textViewSlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="@string/show_your_wifi_configurations"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <ImageView
        android:id="@+id/imageViewSlide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textViewSlide"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/add_new_wifi_configuration"
        android:src="@drawable/ic_flick" />

    <TextView
        android:id="@+id/textViewArrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageViewArrow"
        android:layout_toLeftOf="@+id/imageViewArrow"
        android:text="@string/add_new_wifi_configuration"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</RelativeLayout>